{
  "manifest_version": 3,
  "name": "Simplify & Dumb-Down LinkedIn Rewriter",
  "version": "0.1.0",
  "description": "Rewrites LinkedIn posts into simpler, more casual language using the Gemini API.",
  "permissions": [
    "storage",      // For saving settings, API key, feedback
    "activeTab",    // To interact with the current LinkedIn tab
    "scripting",    // To inject content scripts
    "contextMenus"  // For right-click menu option
  ],
  "host_permissions": [
    "*://*.linkedin.com/*" // To run content scripts on LinkedIn
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
